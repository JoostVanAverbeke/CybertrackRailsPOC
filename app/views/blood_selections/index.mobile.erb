<div data-role="header">
    <h2><%= t('blood_selections.helpers.label.listing') %></h2>
</div>
<div data-role="content">
  <div class="ui-bar uii-bar-a">
    <h3><%= @patient.externalize %></h3>
  </div>
  <div class="ui-body ui-body-a">
    <%= render :partial => 'person_medical_record', locals: { patient: @patient } %>
  </div>
  <div id="blood_selections_container">
    <% if pending_blood_selections?(@blood_selections) %>
        <h4 class="ui-bar ui-bar-a">Pending transfusions</h4>
        <%= render :partial => 'blood_selections', locals: { blood_selections: pending_blood_selections(@blood_selections), patient_id: @patient.prsn_Id } %>
    <% end %>
    <% if past_blood_selections?(@blood_selections) %>
        <h4 class="ui-bar ui-bar-b">Past transfusions</h4>
        <%= render :partial => 'blood_selections', locals: { blood_selections: past_blood_selections(@blood_selections), patient_id: @patient.prsn_Id } %>
    <% end %>
  </div>
  <div data-role="navbar" data-iconpos="left">
    <ul>
      <li>
        <%= link_to patients_path, data: { icon: 'back'} do %>
            <%= t('application.helpers.label.back') %>
        <% end %>
      </li>
    </ul>
  </div>
</div>