<%= content_tag 'fieldset', data: { role: :collapsible, theme: get_status_theme(blood_selection.bsel_Status) } do %>
    <legend><%= blood_selection.bsel_ProductMnemonic %> <%= blood_selection.bsel_StatusString %></legend>
    <p><%= blood_selection.bsel_BloodGroupString %></p>
    <p><%= blood_selection.bsel_RhesusString %></p>
    <p><%= blood_selection.bsel_PositiveScreening %></p>
    <% if blood_selection.bsel_BloodBag %>
        <ul data-role="listview">
          <li><%= link_to blood_selection.bsel_ProductMnemonic,  blood_bag_blood_bag_attributes_path(blood_selection.bsel_BloodBag) %></li>
        </ul>
    <% end %>
<% end %>