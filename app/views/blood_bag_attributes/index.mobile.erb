<div data-role="header">
  <h2><%= t('blood_bag_attributes.helpers.label.listing') %></h2>
</div>
<div data-role="content">
  <div class="ui-body ui-body-a">
    <%= render :partial => 'blood_bag', locals: { blood_bag: @blood_bag } %>
  </div>
  <div id="blood_bag_attributes_container">
    <% grouper = BloodBagAttributesGrouper.new(@blood_bag_attributes) %>
    <div data-role="tabs">
      <div data-role="navbar">
        <ul>
          <% grouper.groups.each_with_index do |group, index| %>
              <% if index == 0 %>
                <li><%= link_to group.label, anchor_href(group.label), { data: { theme: 'c', ajax: false }, class: 'ui-btn-active'} %></li>
              <% else %>
                  <li><%= link_to group.label, anchor_href(group.label), { data: { theme: 'c', ajax: false } } %></li>
              <% end %>
          <% end %>
        </ul>
      </div>
      <% grouper.groups.each do |group| %>
          <div id="<%= group.label %>">
            <h2><%= parameters_label(group.label) %></h2>
            <ul data-role="listview" data-inset="true">
              <% group.attributes.each do |blood_bag_attribute| %>
                  <li>
                    <%= label_tag :externalize, blood_bag_attribute.externalize %>
                    <%= blood_bag_attribute.bbat_ExtraInfo %>
                  </li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
  </div>
  <div data-role="navbar">
    <ul>
      <li>
        <%= link_to @patient_id ? patient_blood_selections_path(@patient_id) : patients_path, class: :anchorButton do %>
            <%= image_tag('black/back.png', class: 'button_image_text') %>
            <%= t('application.helpers.label.back') %>
        <% end %>
      </li>
      <li>
        <%= link_to edit_all_blood_bag_blood_bag_attributes_path @blood_bag.bbag_Id do %>
            <%= image_tag('black/edit.png', class: 'button_image_text') %>
            <%= t('application.helpers.label.edit') %>
        <% end %>
      </li>
    </ul>
  </div>
</div>