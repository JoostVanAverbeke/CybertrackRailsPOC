<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
        <%= yield(:title) %>
    <% else %>
        CyberTrack
    <% end %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <% if current_user? %>
        <!--<%= "user id = #{current_user.usr_Id}, Lastname = #{current_user.usr_LastName}" %>-->
        <%= render template: 'menu/index', layout: false %>
    <% end %>

    <%= yield %>

</body>
</html>
